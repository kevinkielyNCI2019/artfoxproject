<p id="notice"><%= notice %></p>

<h1>Artworks</h1>

<table>
  <thead>
    <tr>
      <th>Picture</th>
      <th>Title</th>
      <th>Cat</th>
      <th>Desc</th>
      <th>Price</th>
      <th>Imageurl</th>
      <th>Sold</th>
      <th>Artist</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @artworks.each do |artwork| %>
      <tr>
        <td><%= image_tag(artwork.artpic) if artwork.artpic.attached? %></td>
        <td><%= artwork.title %></td>
        <td><%= artwork.cat %></td>
        <td><%= artwork.desc %></td>
        <td><%= artwork.price %></td>
        <td><%= artwork.imageurl %></td>
        <td><%= artwork.sold %></td>
        <td><%= artwork.artist.email %></td>
        <td><%= link_to 'Show', artwork %></td>
        <td><%= link_to 'Edit', edit_artwork_path(artwork) %></td>
        <td><%= link_to 'Destroy', artwork, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><a href="/cart/<%= artwork.id %>" class="button">Add To Cart</a></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Artwork', new_artwork_path %>
